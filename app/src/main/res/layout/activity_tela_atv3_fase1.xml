<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Tela_Atv3_fase1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/logo_colorida"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:id="@+id/btnVoltarAtv3Fase1"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        app:srcCompat="@drawable/seta_voltar" />

    <TextView
        android:id="@+id/txtEnunAtv3Fase1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="@font/fonttitulopreto"
        android:text="@string/enun_qual_letra"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

    <ImageView
        android:id="@+id/BalaoAtv3Fase1"
        android:layout_width="215dp"
        android:layout_height="174dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        app:srcCompat="@drawable/bal_ocomletrai" />

    <ImageView
        android:id="@+id/imageEnunciado3fase1"
        android:layout_width="130dp"
        android:layout_height="174dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/BalaoAtv3Fase1"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEnunAtv3Fase1"
        app:srcCompat="@drawable/avatar_enun" />

    <ImageView
        android:id="@+id/btn_O"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_G"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BalaoAtv3Fase1"
        app:srcCompat="@drawable/letraopng" />

    <ImageView
        android:id="@+id/btn_G"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_O"
        app:layout_constraintTop_toBottomOf="@+id/BalaoAtv3Fase1"
        app:srcCompat="@drawable/letrag" />

    <!-- BotÃµes de resposta errados e corretos, ajustados para novos ids -->

    <ImageView
        android:id="@+id/btn_K"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_I"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_O"
        app:srcCompat="@drawable/letrak" />

    <ImageView
        android:id="@+id/btn_I"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_K"
        app:layout_constraintTop_toBottomOf="@+id/btn_G"
        app:srcCompat="@drawable/letrai" />

    <ImageView
        android:id="@+id/btn_K_errado"
        android:layout_width="128dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_K"
        app:layout_constraintEnd_toEndOf="@+id/btn_K"
        app:layout_constraintStart_toStartOf="@+id/btn_K"
        app:layout_constraintTop_toTopOf="@+id/btn_K"
        app:srcCompat="@drawable/incorretaletrak_fase1" />

    <ImageView
        android:id="@+id/btn_I_Certo"
        android:layout_width="128dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_I"
        app:layout_constraintEnd_toEndOf="@+id/btn_I"
        app:layout_constraintStart_toStartOf="@+id/btn_I"
        app:layout_constraintTop_toTopOf="@+id/btn_I"
        app:srcCompat="@drawable/corretaletrai" />

    <ImageView
        android:id="@+id/btn_O_errado"
        android:layout_width="128dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_O"
        app:layout_constraintEnd_toEndOf="@+id/btn_O"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_O"
        app:layout_constraintTop_toTopOf="@+id/btn_O"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/incorretaletrao" />

    <ImageView
        android:id="@+id/btn_G_errado"
        android:layout_width="128dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_G"
        app:layout_constraintEnd_toEndOf="@+id/btn_G"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_G"
        app:layout_constraintTop_toTopOf="@+id/btn_G"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/incorretaletrag" />

</androidx.constraintlayout.widget.ConstraintLayout>
