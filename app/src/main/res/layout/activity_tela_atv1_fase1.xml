<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Tela_Atv1_fase1">

    <ImageView
        android:id="@+id/btnVoltarAtv1Fase1"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4"
        app:srcCompat="@drawable/seta_voltar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/logo_colorida"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:id="@+id/btn_Let_B"
        android:layout_width="126dp"
        android:layout_height="109dp"

        android:layout_marginTop="36dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Let_B_Inc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageEnunciado1"
        app:srcCompat="@drawable/letrab" />

    <ImageView
        android:id="@+id/btn_Let_C"
        android:layout_width="128dp"
        android:layout_height="116dp"

        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Let_A"
        app:srcCompat="@drawable/letrac" />

    <ImageView
        android:id="@+id/btn_Let_D"
        android:layout_width="128dp"
        android:layout_height="116dp"

        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toEndOf="@+id/btn_Let_C"
        app:layout_constraintTop_toBottomOf="@+id/btn_Let_B"
        app:srcCompat="@drawable/letrad" />

    <ImageView
        android:id="@+id/btn_Let_A"
        android:layout_width="128dp"
        android:layout_height="116dp"

        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_Let_B"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageEnunciado1"
        app:srcCompat="@drawable/letraa" />

    <ImageView
        android:id="@+id/imageEnunciado1"
        android:layout_width="343dp"
        android:layout_height="253dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="25dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4"
        app:srcCompat="@drawable/boneco_enunciado" />

    <ImageView
        android:id="@+id/imageBalao"
        android:layout_width="178dp"
        android:layout_height="198dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4"
        app:srcCompat="@drawable/bal_ocomletra" />

    <ImageView
        android:id="@+id/btn_Let_A_Certo"
        android:layout_width="128dp"
        android:layout_height="116dp"

        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_Let_B"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageEnunciado1"
        app:srcCompat="@drawable/corretoletraa" />

    <ImageView
        android:id="@+id/btn_Let_B_Inc"
        android:layout_width="128dp"
        android:layout_height="116dp"

        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toEndOf="@+id/btn_Let_A"
        app:layout_constraintTop_toBottomOf="@+id/imageEnunciado1"
        app:srcCompat="@drawable/incorretaletrab" />

    <ImageView
        android:id="@+id/btn_Let_C_Inc"
        android:layout_width="128dp"
        android:layout_height="116dp"

        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_Let_D"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Let_A"
        app:srcCompat="@drawable/incorretaletrac" />

    <ImageView
        android:id="@+id/btn_Let_D_Inc"
        android:layout_width="128dp"
        android:layout_height="116dp"

        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toEndOf="@+id/btn_Let_C"
        app:layout_constraintTop_toBottomOf="@+id/btn_Let_B"
        app:srcCompat="@drawable/incorretaletrad" />


</androidx.constraintlayout.widget.ConstraintLayout>