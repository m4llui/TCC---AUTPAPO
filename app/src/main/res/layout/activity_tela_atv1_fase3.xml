<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Tela_Atv1_fase3">
    <!-- atualizado -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/logo_colorida"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:id="@+id/btnVoltarAtv1Fase3"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/seta_voltar" />

    <ImageView
        android:id="@+id/btn_pfv"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_carro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBalao"
        app:srcCompat="@drawable/btn_pfv" />

    <ImageView
        android:id="@+id/btn_casa"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_morango"
        app:layout_constraintTop_toBottomOf="@+id/btn_carro"
        app:srcCompat="@drawable/btn_casatxt" />

    <ImageView
        android:id="@+id/btn_morango"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_casa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pfv"
        app:srcCompat="@drawable/btn_morango" />


    <ImageView
        android:id="@+id/btn_carro"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_pfv"
        app:layout_constraintTop_toBottomOf="@+id/imgBalao"
        app:srcCompat="@drawable/btn_carro" />

    <ImageView
        android:id="@+id/btn_pfv_certo"
        android:layout_width="128dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_pfv"
        app:layout_constraintEnd_toEndOf="@+id/btn_pfv"
        app:layout_constraintStart_toStartOf="@+id/btn_pfv"
        app:layout_constraintTop_toTopOf="@+id/btn_pfv"
        app:srcCompat="@drawable/btn_pfv_certo" />

    <ImageView
        android:id="@+id/btn_carro_errado"
        android:layout_width="128dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_carro"
        app:layout_constraintStart_toStartOf="@+id/btn_carro"
        app:layout_constraintTop_toTopOf="@+id/btn_carro"
        app:layout_constraintEnd_toEndOf="@+id/btn_carro"
        app:srcCompat="@drawable/btn_carro_erro" />

    <ImageView
        android:id="@+id/btn_morango_errado"
        android:layout_width="128dp"
        android:layout_height="116dp"
        app:srcCompat="@drawable/btn_morango_erro"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="489dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_morango"
        app:layout_constraintStart_toStartOf="@+id/btn_morango"
        app:layout_constraintTop_toTopOf="@+id/btn_morango"
        app:layout_constraintEnd_toEndOf="@+id/btn_morango"/>

    <ImageView
        android:id="@+id/btn_casa_errado"
        android:layout_width="128dp"
        android:layout_height="116dp"
        app:srcCompat="@drawable/btn_casatxt_erro"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="489dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_casa"
        app:layout_constraintStart_toStartOf="@+id/btn_casa"
        app:layout_constraintTop_toTopOf="@+id/btn_casa"
        app:layout_constraintEnd_toEndOf="@+id/btn_casa"/>

    <TextView
        android:id="@+id/txtEnunPfv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/fonttitulopreto"
        android:text="@string/enun_pfv"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/avatarAtv1_fase3"
        android:layout_width="130dp"
        android:layout_height="174dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEnunPfv"
        app:srcCompat="@drawable/avatar_enun" />

    <ImageView
        android:id="@+id/imgBalao"
        android:layout_width="223dp"
        android:layout_height="199dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/balao_enun_pfv" />
    <ImageView
        android:id="@+id/not_erro"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/not_erro" />

    <ImageView
        android:id="@+id/not_acerto"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/not_acerto" />

</androidx.constraintlayout.widget.ConstraintLayout>